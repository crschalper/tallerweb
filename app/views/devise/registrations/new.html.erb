<div id="header">

		<div id="menu">
			<ul>
				<% if user_signed_in? %>
				<li><%=link_to "Inicio", root_path%> </li>
				<li><%=link_to "Perfil", user_path(current_user)%></li>
					<%if current_user.type=="Admin"%>
					<li><%= link_to "Usuarios", users_path%></li>
					<li><%= link_to "Cursos", cursos_path%></li>
					<li><%= link_to "Posts", posts_path%></li>
					<li><%= link_to "Comentarios", comments_path%></li>
					<%end%>
						
				<li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
				<% else %>
				<li><%=link_to "Inicio", root_path%></li>
				<li class="current_page_item first"><span><%= link_to "Inscribete", new_user_registration_path %></span> </li>
				<li><%= link_to "Entra!", new_user_session_path %></li>
				<% end %>
			</ul>
		</div><!-- end #menu -->

</div><!-- end #header -->

<div id="logo">
		<h1>Posts</h1>
		<p>En desarrollo</p>
</div><!-- end #logo -->

<div id="page">

	<div id="content">
<h2>Inscribete!</h2>
<br>
[Todos los campos son obligatorios]
<br>
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div>Correo electr&oacute;nico<br />
  <%= f.email_field :email %></div>

 <div><%= f.label :usuario %><br />
    <%= f.text_field :username %></div>
    
  <div><%= f.label :nombre %><br />
    <%= f.text_field :name %></div>
    
  <div><%= f.label :apellido %><br />
    <%= f.text_field :lastname %></div>
  
  <div>Rut (sin puntos ni gui&oacute;n. Si termina en K, reempl&aacute;celo por un 0)<br />
    <%= f.number_field :rut %></div>

  <div>Contrase&ntilde;a<br/>
  <%= f.password_field :password %></div>

  <div>Confirmaci&oacute;n contrase&ntilde;a<br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Inscribir" %></div>
<% end %>


</div><!-- end #content -->

		




	<div id="sidebar">
			<ul>
				<li><% if !user_signed_in?%>
					<h2>Entrar</h2>
					<p>
						<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
						<div><%= f.label "E-mail, Rut o Usuario" %><br />
							  <%= f.text_field :login %></div>
							  
							<div>Contrase&ntilde;a</br>
							<%= f.password_field :password %></div>

							<% if devise_mapping.rememberable? -%>
							<div><%= f.check_box :remember_me %> <%= f.label "Recordarme" %></div>
							<% end %>

							<div><%= f.submit "Entrar" %></div>
							<% end %>
							
					</p>
					<%end%>
				</li>
				
			</ul>
	</div><!-- end #sidebar -->
	<div style="clear: both;">&nbsp;</div>

	</div>

</div><!-- end #page -->
