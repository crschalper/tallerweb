<div id="header">

		<div id="menu">
			<ul>
			<% if user_signed_in? %>
				<li class="current_page_item first"><span><%=link_to "Inicio", root_path%> </span></li>
				<li><%=link_to "Perfil", user_path(current_user)%></li>
				<li><%if current_user.admin?%><%= link_to "Usuarios", users_path%><%end%></li>	
				<li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
			<% else %>
				<li class="current_page_item first"><span><%=link_to "Inicio", root_path%> </span></li>
				<li><%= link_to "Inscribete!", new_user_registration_path %></li>
				<li><%= link_to "Entra", new_user_session_path %></li>
			<% end %>
			</ul>
		</div><!-- end #menu -->

	</div><!-- end #header -->
	
	<div id="logo">
		<h1>Posts</h1>
		<p>En desarrollo</p>
	</div><!-- end #logo -->

<div id="page">

	<div id="content">
	
	<div class="post">

				<h2 class="title"><a href="#">Bienvenido al sitio de POSTS!</a></h2>

				<p class="meta">Sunday, September 10, 2011 7:27 AM <span>Posted by <a href="#">Someone</a></span></p>

				<div class="entry">

					<p>Este sitio de <strong>Posts</strong> esta en desarrollo para ser un blog para los colegios. </p>

				</div>

			</div>


	<%= yield %>

	</div><!-- end #content -->

		




	<div id="sidebar">
			<ul>
				<li><% if !user_signed_in?%>
					<h2>Entrar</h2>
					<p>
						<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
							<div><%= f.label :email %> </br>
							<%= f.email_field :email %></div>

							<div><%= f.label :password %></br>
							<%= f.password_field :password %></div>

							<% if devise_mapping.rememberable? -%>
							<div><%= f.check_box :remember_me %> <%= f.label "Recordarme" %></div>
							<% end %>

							<div><%= f.submit "Entrar" %></div>
							<% end %>
							
					</p>
					<%end%>
				</li>
				
			</ul>
	</div><!-- end #sidebar -->
	<div style="clear: both;">&nbsp;</div>

	</div>

</div><!-- end #page -->
