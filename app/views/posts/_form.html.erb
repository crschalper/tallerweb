<%= form_for(@post) do |f| %>

  

<%if current_user.type =="Admin"%>
<div class="field">
    <%= f.label :autor %><br />
    <%= f.collection_select(:user_id, User.find(:all, :conditions=>{:type=>"Teacher"}), :id, :name)%>
</div>
<%else%>
  <div class="field">
    <%= f.label :autor %><br />
    <%= f.hidden_field :user_id, :value => @post.user_id%>
    <%= f.text_field :user_id, :disabled => "disabled", :value => User.find(@post.user_id).name %>
  </div>
  <%end%>
  [Todos los campos son obligatorios]

  <br>
<br>
  <div class="field">
    <%= f.label :titulo %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :contenido %><br />
    <%= f.text_area :content %>
  </div>
  
  <div class="field">
    <%= f.label :activo %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :Archivo %><br />
    <%= f.file_field :image %>
  </div>
    
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>


