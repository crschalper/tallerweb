<%= form_for(@post) do |f| %>
  

  <div class="field">
    <%= f.label :autor %><br />
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.text_field :user_id, :disabled => "disabled", :value => current_user.name %>
  </div>
  
  [Todos los campos son obligatorios]

  <br>
<br>
  <div class="field">
    <%= f.label :titulo %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :contenido %><br />
    <%= f.text_area :content %>
  </div>
  
  <div class="field">
    <%= f.label :activo %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :Archivo %><br />
    <%= f.file_field :image %>
  </div>
    
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>


