<div id="header">

		<div id="menu">
			<ul>
			<% if user_signed_in? %>
				<li> <%=link_to "Inicio", root_path%></li>
				<li ><%=link_to "Perfil", user_path(current_user)%> </li>
				<li class="current_page_item first"><span><%if current_user.admin?%><%= link_to "Usuarios", users_path%><%end%></span></li>	
				<li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
			<% else %>
				<li><%=link_to "Inicio", root_path%></li>
				<li><%= link_to "Inscribete!", new_user_registration_path %></li>
				<li><%= link_to "Entra", new_user_session_path %></li>
			<% end %>
			</ul>
		</div><!-- end #menu -->

	</div><!-- end #header -->
	
	<div id="logo">
		<h1>Posts</h1>
		<p>En desarrollo</p>
	</div><!-- end #logo -->

<div id="page">

	<div id="content">
	
<%if current_user.admin?%>
<h2>Usuarios Registrados</h2>

<table>
  <tr>
    <th><%=sortable "Username" %></th>
    <th><%=sortable "name" %></th>
      <th><%=sortable "lastname" %></th>
    <th><%=sortable "rut"%></th>
    <th><%=sortable "role"%></th>
    <th></th>
    <th></th>
    <th></th>
</tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.lastname %></td>
    <td><%= user.rut %></td>
    <td><%if user.admin? %>
    Administrador
    <%elsif user.teacher?%>
    Profesor
    <%elsif user.student%>
    Alumno
    <%else%>
    <%end%></td>
    <td><%= link_to 'Ver', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <%if current_user.admin?%>
    <td><%= link_to 'Eliminar', user, :confirm => 'Are you sure?', :method => :delete %></td>
  <%end%>
  </tr>
<% end %>
</table>

<br />
<%else%>
</br>
<b>Lo sentimos, no tienes los privilegios para ver esta parte del sitio</b>
<%end%>


			
			
	</div><!-- end #content -->

		




	<div id="sidebar">
			<ul>
				<li><% if !user_signed_in?%>
					<h2>Entrar</h2>
					<p>
						<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
							<div><%= f.label :email %> </br>
							<%= f.email_field :email %></div>

							<div><%= f.label :password %></br>
							<%= f.password_field :password %></div>

							<% if devise_mapping.rememberable? -%>
							<div><%= f.check_box :remember_me %> <%= f.label "Recordarme" %></div>
							<% end %>

							<div><%= f.submit "Entrar" %></div>
							<% end %>
							
					</p>
					<%end%>
				</li>
				
			</ul>
	</div><!-- end #sidebar -->
	<div style="clear: both;">&nbsp;</div>

	</div>

</div><!-- end #page -->
