<h1>Usuarios Registrados </h1>

<table>
  <tr>
    <th><%=sortable "name" %></th>
    <th><%=sortable "lastname" %></th>
    <th><%=sortable "username" %></th>
    <th><%=sortable "email" %></th>
    <th><%=sortable "role"%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.lastname %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

