<div id="header">

		<div id="menu">
			<ul>
			<% if user_signed_in? %>
				<li> <%=link_to "Inicio", root_path%></li>
				<li class="current_page_item first"><span><%=link_to "Perfil", user_path(current_user)%> </span></li>
				<li><%if current_user.admin?%><%= link_to "Usuarios", users_path%><%end%></li>	
				<li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
			<% else %>
				<li><%=link_to "Inicio", root_path%></li>
				<li><%= link_to "Inscribete!", new_user_registration_path %></li>
				<li><%= link_to "Entra", new_user_session_path %></li>
			<% end %>
			</ul>
		</div><!-- end #menu -->

	</div><!-- end #header -->
	
	<div id="logo">
		<h1>Posts</h1>
		<p>En desarrollo</p>
	</div><!-- end #logo -->

<div id="page">

	<div id="content">
	
	<%if current_user.admin?|| current_user == @user %>
<p id="notice"><%= notice %></p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Lastname:</b>
  <%= @user.lastname %>
</p>

<p>
  <b>Rut:</b>
  <%= @user.rut %>
</p>

<p>
  <b>Rol:</b>
  <%if @user.admin? %>
    Administrador
    <%elsif @user.teacher?%>
    Profesor
    <%elsif @user.student%>
    Alumno
    <%else%>
    <%end%>
</p>

<%= link_to 'Editar', edit_user_path(@user) %><%if current_user.admin?%> |
<%= link_to 'Usuarios', users_path %>
<%end%>
<%else%>
</br>
<b>Lo sentimos, no tienes los privilegios para ver esta parte del sitio</b>
<%end%>

			
			
	</div><!-- end #content -->

		




	<div id="sidebar">
			<ul>
				<li><% if !user_signed_in?%>
					<h2>Entrar</h2>
					<p>
						<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
							<div><%= f.label :email %> </br>
							<%= f.email_field :email %></div>

							<div><%= f.label :password %></br>
							<%= f.password_field :password %></div>

							<% if devise_mapping.rememberable? -%>
							<div><%= f.check_box :remember_me %> <%= f.label "Recordarme" %></div>
							<% end %>

							<div><%= f.submit "Entrar" %></div>
							<% end %>
							
					</p>
					<%end%>
				</li>
				
			</ul>
	</div><!-- end #sidebar -->
	<div style="clear: both;">&nbsp;</div>

	</div>

</div><!-- end #page -->
